<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<sheets>
		<main>
			<ROOT>
				<TCEforms>
					<sheetTitle>Instagram</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.username>
						<TCEforms>
							<exclude>1</exclude>
							<label>Instagram Username</label>
							<config>
								<type>input</type>
								<placeholder>in2code.de</placeholder>
								<eval>trim,required</eval>
							</config>
						</TCEforms>
					</settings.username>
					<settings.appId>
						<TCEforms>
							<exclude>1</exclude>
							<label>App ID</label>
							<config>
								<type>input</type>
								<placeholder>12345678901234567</placeholder>
								<eval>trim,required</eval>
							</config>
						</TCEforms>
					</settings.appId>
					<settings.appSecret>
						<TCEforms>
							<exclude>1</exclude>
							<label>App secret</label>
							<config>
								<type>input</type>
								<placeholder>e543d40cc05565d1880bb81768e9ca87</placeholder>
								<eval>trim,required,alphanum</eval>
							</config>
						</TCEforms>
					</settings.appSecret>
					<settings.appReturnUrl>
						<TCEforms>
							<exclude>1</exclude>
							<label>App return URL</label>
							<config>
								<type>input</type>
								<placeholder>https://www.in2code.de/</placeholder>
								<eval>trim,required</eval>
							</config>
						</TCEforms>
					</settings.appReturnUrl>
					<settings.firstPost>
						<TCEforms>
							<exclude>1</exclude>
							<label>Start at post</label>
							<config>
								<type>input</type>
								<default>1</default>
								<eval>trim,int</eval>
								<range>
									<lower>1</lower>
									<upper>100</upper>
								</range>
								<slider>
									<step>1</step>
									<width>400</width>
								</slider>
							</config>
						</TCEforms>
					</settings.firstPost>
					<settings.limit>
						<TCEforms>
							<exclude>1</exclude>
							<label>Limit</label>
							<config>
								<type>input</type>
								<default>12</default>
								<eval>trim,int</eval>
								<range>
									<lower>1</lower>
									<upper>100</upper>
								</range>
								<slider>
									<step>1</step>
									<width>400</width>
								</slider>
							</config>
						</TCEforms>
					</settings.limit>
					<settings.getToken>
						<TCEforms>
							<exclude>1</exclude>
							<label>Token status</label>
							<config>
								<type>user</type>
								<renderType>instagramGetToken</renderType>
							</config>
						</TCEforms>
					</settings.getToken>
				</el>
			</ROOT>
		</main>
	</sheets>
</T3DataStructure>
